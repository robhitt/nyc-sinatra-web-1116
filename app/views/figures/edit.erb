<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit This Item</title>

  </head>
  <body>

    <!-- Form Begins -->
    <form method="post" action="/figures/<%=@figure.id%>">

      <!-- Name of Figure -->
      <label for="name">Figure Name</label>
      <input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">

      <br><br>

      <!-- Figure Title -->
      <label for="title">Figure Title(s)</label>
      <ul style="list-style: none">
        <% @titles.each do |title| %>
          <li>
            <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
            <%=title.name%>
          </li>
        <% end %>
      </ul>

      <!-- Existing Landmark Name(s) -->
      <label for="landmark">Landmark Name</label>
      <ul style="list-style: none">
          <% @landmarks.each do |landmark| %>
          <li>
            <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"
            <%='checked' if @figure.landmarks.include?(landmark)%>>
            <%=landmark.name%>
          </li>
          <% end %>
      </ul>


      <!-- Create New Landmark -->
      <label for="new_landmark">New Landmark</label>
      <input id="new_landmark" type="text" name="landmark[name]">


      <br><br>


      <!-- Create New Title -->
      <label for="new_title">New Title</label>
      <input id="new_title" type="text" name="title[name]">


      <!-- Submit -->
      <p><input id="submit" type="submit" value="Edit Figure"></p>


    </form>

  </body>
</html>

